<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ios_background"
    tools:context=".MainActivity">

    <!-- iOS Style Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/ios_secondary_background"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thư Viện Ảnh"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/ios_text_primary"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ios_separator"/>
    </LinearLayout>

    <!-- ImageSwitcher Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/ios_card_background">

        <ImageSwitcher
            android:id="@+id/imageSwitcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <!-- Image Name Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/ios_card_background">

        <TextView
            android:id="@+id/tvImageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn một ảnh từ thư viện"
            android:textSize="16sp"
            android:textColor="@color/ios_text_secondary"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:gravity="center" />
    </androidx.cardview.widget.CardView>

    <!-- Control Buttons - 2 Rows -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <!-- First Row: Slideshow Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnPlaySlideshow"
                style="@style/iOSButtonPrimary"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="▶ Phát Slideshow"
                android:textSize="13sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnStopSlideshow"
                style="@style/iOSButtonSecondary"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="⏸ Dừng Slideshow"
                android:textSize="13sp"
                android:enabled="false" />
        </LinearLayout>

        <!-- Second Row: Add & Favorites -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAddPhoto"
                style="@style/iOSButtonPrimary"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="➕ Thêm Ảnh"
                android:textSize="13sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnShowFavorites"
                style="@style/iOSButtonSecondary"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="⭐ Yêu Thích"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Section Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvGridTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả ảnh"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/ios_text_primary"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- GridView -->
    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="2"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:padding="10dp"
        android:stretchMode="columnWidth"
        android:clipToPadding="false" />

</LinearLayout>
