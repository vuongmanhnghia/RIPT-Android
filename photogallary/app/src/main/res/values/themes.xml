<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Photogallary" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorPrimaryVariant">@color/ios_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/ios_background</item>
        <item name="android:statusBarColor">@color/ios_secondary_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.Photogallary" parent="Base.Theme.Photogallary" />

    <!-- iOS Style Button Primary -->
    <style name="iOSButtonPrimary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/ios_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- iOS Style Button Secondary -->
    <style name="iOSButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/ios_separator</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/ios_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="backgroundTint">@color/ios_secondary_background</item>
    </style>
</resources>